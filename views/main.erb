<p>Travel Adventures</p>


<% for adventure in @adventures %>
<div class="row">
  <div class="adventures column">
    <% if @visited.include?(adventure)%>
    <h4>Visited</h4>
    <p>Country: <%= adventure.country() %> </p>
    <p>Continent: <%= adventure.continent() %> </p>
    <p>
      <a href="/main/<%= adventure.id %>/details">Details</a>
      <a href="/main/<%= adventure.id %>/edit">Edit</a>
      <form action="/main/<%= adventure.id %>/delete" method="POST">
        <input class="button" type="submit" value="Delete" />
      </form>
    </p>
  </div>

  <h4>Planned</h4>
  <div class="adventures column">
    <%else %>
    <p>Country: <%= adventure.country() %> </p>
    <p>Continent: <%= adventure.continent() %> </p>
    <p>
      <a href="/main/<%= adventure.id %>/details ">Details</a>
      <a href="/main/<%= adventure.id %>/edit ">Edit</a>
      <a href="/main/<%= adventure.id %>/visited">Add visit</a>
      <form action="/main/<%= adventure.id %>/delete" method="POST">
        <input class="button" type="submit" value="Delete" />
      </form>
    </p>
  </div>
</div>
    <% end %>
<% end %>
